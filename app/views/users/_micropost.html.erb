<li id="micropost-<%= @microposts.ids %>">
  <%= link_to gravatar_for(@microposts.user, size: 50), @microposts.user %>
  <span class="user"><%= link_to @microposts.user.name, @microposts.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
</li>